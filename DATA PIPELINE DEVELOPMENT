        "print(df)\n",
        "\n",
        "# Step 3: Handle missing values\n",
        "df['Age'].fillna(df['Age'].mean(), inplace=True)\n",
        "df['Marks'].fillna(df['Marks'].mean(), inplace=True)\n",
        "\n",
        "# Step 4: Encode categorical data\n",
        "le = LabelEncoder()\n",
        "df['Gender'] = le.fit_transform(df['Gender'])\n",
